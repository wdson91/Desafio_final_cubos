// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

model Categories {
  id          Int        @id @default(autoincrement())
  description String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime?  @updatedAt
  Produtos    Produtos[]
}

model Produtos {
  id                 Int        @id @default(autoincrement())
  descricao          String
  quantidade_estoque Int
  valor              Float
  produto_imagem     String?
  category           Categories @relation(fields: [categoria_id], references: [id])
  categoria_id       Int
  createdAt          DateTime   @default(now())
  updatedAt          DateTime?  @updatedAt
}

model Clientes {
  id        Int       @id @default(autoincrement())
  nome      String
  email     String    @unique
  cpf       String    @unique
  cep       String?
  rua       String?
  numero    Int?
  bairro    String?
  cidade    String?
  estado    String?
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}
